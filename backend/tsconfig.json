{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "declaration": true,
        "emitDeclarationOnly": false,
        "forceConsistentCasingInFileNames": true,
        "allowImportingTsExtensions": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmit": false,
        "baseUrl": "./src",
        "paths": {
            "@config/*": [
                "config/*"
            ],
            "@routes/*": [
                "routes/*"
            ],
            "@controllers/*": [
                "controllers/*"
            ],
            "@middleware/*": [
                "middleware/*"
            ],
            "@models/*": [
                "models/*"
            ],
            "@services/*": [
                "services/*"
            ],
            "@types/*": [
                "types/*"
            ],
            "@utils/*": [
                "utils/*"
            ]
        },
    },
    "ts-node": {
        "compilerOptions": {
            "module": "ESNext"
        },
        "include": [
            "src",
        ],
        "exclude": [
            "node_modules"
        ],
    }
}