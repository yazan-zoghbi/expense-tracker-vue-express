{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "declaration": true,
        "emitDeclarationOnly": true,
        "forceConsistentCasingInFileNames": true,
        "allowImportingTsExtensions": true
    },
    "include": [
        "src",
        "server.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}